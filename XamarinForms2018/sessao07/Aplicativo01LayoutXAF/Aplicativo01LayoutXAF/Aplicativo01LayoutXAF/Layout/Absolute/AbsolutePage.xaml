<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicativo01LayoutXAF.Layout.Absolute.AbsolutePage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <!--x,y,w,h-->
            <BoxView AbsoluteLayout.LayoutBounds="0,0,200,100" BackgroundColor="DarkSlateGray" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            <BoxView AbsoluteLayout.LayoutBounds="50,50,100,100" BackgroundColor="LightGray" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            <BoxView  AbsoluteLayout.LayoutBounds="300,300,50,50" BackgroundColor="Gray" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

            <BoxView AbsoluteLayout.LayoutFlags="WidthProportional" AbsoluteLayout.LayoutBounds="0,400,0.5,100" BackgroundColor="RosyBrown" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            <BoxView AbsoluteLayout.LayoutFlags="HeightProportional" AbsoluteLayout.LayoutBounds="300,300,50,0.5" BackgroundColor="MistyRose" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>