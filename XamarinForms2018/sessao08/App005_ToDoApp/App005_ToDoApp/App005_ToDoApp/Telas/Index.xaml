<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App005_ToDoApp.Telas.Index">
    <ContentPage.Content>
        <StackLayout x:Name="SLMainIndex">
            <StackLayout BackgroundColor="#354F9C" HeightRequest="150" Padding="10">
                <Label Text="Meu Dia" TextColor="White" FontSize="24" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                <Label x:Name="date" TextColor="White" HorizontalOptions="Start" VerticalOptions="End"/>
            </StackLayout>
            <StackLayout x:Name="slTasks">
                
            </StackLayout>
            <StackLayout VerticalOptions="End" HorizontalOptions="Start">
                <Button Text="New" Clicked="BtnCadastro"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>