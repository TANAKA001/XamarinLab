<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App003_Controles.Controles.EntryEditorPAge">
    <ContentPage.Content>
        <StackLayout>
            <Entry
                Text=""
                Placeholder="Digite aqui"
                TextColor="Black"
                PlaceholderColor="BlueViolet"
                IsPassword="True"
                IsVisible="True"
                
                x:Name="txtEntrada"
                Keyboard="Numeric"
                
                BackgroundColor="Beige"
                />
            <Label x:Name="lblDuplicado"/>
            
            <Editor x:Name="txtComentario" HeightRequest="200" WidthRequest="300" />
            <Label x:Name="lblQtdChtr"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>