<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App003_Controles.Controles.SwitchPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="50">
                <Image x:Name="bulb" Source="loff.png"/>
            </StackLayout>
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="50">
                <Switch IsToggled="False" x:Name="switch" Toggled="switch_Toggled"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>