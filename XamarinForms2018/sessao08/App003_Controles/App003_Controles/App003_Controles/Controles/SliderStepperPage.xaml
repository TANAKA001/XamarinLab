<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App003_Controles.Controles.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="slideResult" />
            <Slider 
                Minimum="0"
                Maximum="10"
                Value="0"
                ValueChanged="Slider_ValueChanged"
                x:Name="sliderTeste"
                />

            <Label x:Name="steperResult"/>
            <Stepper
                Minimum="0"
                Maximum="5"
                Value="0"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>